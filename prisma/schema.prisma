generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  whatsapp      String
  address       String
  created_at    DateTime @default(now())

  pets Pet[]

  @@map("organizations")
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum Independence {
  LOW
  MEDIUM
  HIGH
}

enum Type {
  DOG
  CAT
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  description  String
  age          Int
  size         Size
  energy_level Int
  independence Independence
  type         Type
  created_at   DateTime     @default(now())

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}
